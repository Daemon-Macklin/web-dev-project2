{{> menu id="view"}}

<section class="ui inverted yellow segment">
    <div class="ui stackable equal width three column grid container">
        {{#each publicLists}}
            <div class="column">
                <div class="row">
                    <section class="ui raised center aligned meta card">
                        <div class="ui center aligned content">
                        <h2 class="ui centered header">
                            {{title}}
                        </h2>
                        <h3 class="ui centered header">
                            Number of links: {{links.length}}<br>
                            Likes: {{likes.length}}
                        </h3>
                        <div>
                            <img src="{{image}}" height="200" width="200">
                        </div>
                        <a href="/viewlinklist/{{id}}" class="ui icon ">
                            <i class="blue large tag icon"></i>
                        </a>
                        <a href="/view/like/{{id}}" class="ui icon">
                            <i class="ui large green thumbs up icon"></i>
                        </a>
                        </div>
                    </section>
                </div>
            </div>
        {{/each}}
    </div>
</section>