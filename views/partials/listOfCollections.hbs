 <section class="ui inverted yellow segment">
  <div class="ui stackable equal width three column grid container">
    {{#each links}}
    <div class="column">
     <div class="row">
      <section class="ui raised center aligned meta card">
          <div class="ui center aligned content">
       <h2 class="ui centered header">
         {{title}}
       </h2>
       <h3 class="ui centered header">
         Number of links: {{links.length}}
        </h3>
          <div>
          <img src="{{image}}" height="200" width="200">
          </div>
         <a href="/linklist/{{id}}" class="ui icon ">
           <i class="blue large tag icon"></i> 
          </a>
         <a href="/dashboard/deletelinklist/{{id}}" class="ui icon">
          <i class="bordered inverted red trash icon"></i>
         </a>
          <a href="/dashboard/makepublic/{{id}}" class="ui icon">
              <i class="bordered inverted black cloud upload icon"></i>
          </a>
          <a href="/dashboard/makeprivate/{{id}}" class="ui icon">
              <i class="bordered inverted green cloud download icon"></i>
          </a>
          </div>
         </section>
        </div>
      </div>
    {{/each}}
  </div>
 </section>

  

